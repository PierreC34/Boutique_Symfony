{% extends 'base.html.twig' %}

{% block title %}Skull - Inscription{% endblock %}

{% block content %}
<div class="container-fluid">
<form method="post" class="formLogin">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    
    <h1 class="h3 mb-3 font-weight-normal text-center">Connectez-vous</h1>
    <label for="inputEmail" class="mt-4">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Email...">
    <label for="inputPassword" class="mt-3">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Mot de passe...">

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
    
    

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="d-flex">
    <button class="align-items-center btn btn-lg btn-primary btnFormLogin mt-4 " type="submit">
        Connexion
    </button>
    </div>
</form>
</div>
{% endblock %}
